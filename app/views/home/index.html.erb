<h1>GifGenerator</h1>
<h3>Where all your gif dreams come true!</h3>

<%= link_to 'Gifs', gifs_path %>

<%= link_to 'Create Account', new_user_path %>

<h3>Gif Categories</h3>
<% @categories.each do |category| %>
<div class="category-<%= category.id%>">
  <%=link_to category.name, "/gifs?category=#{category.name}" %>
    <% if current_admin? %>
      <%=link_to 'Delete', admin_category_path(category), method: 'delete' %>
    <% end %>
</div>
  <%end%>
